<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Logout Button (top right corner) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout"
        android:layout_below="@+id/logout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Preview Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/previewCard"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.camera.view.PreviewView
                        android:id="@+id/previewView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/capturedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:visibility="gone" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Capture Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCapture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Emotion"
                android:layout_marginTop="16dp" />

            <!-- Retake Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retake"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- Detected Emotion -->
            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are Happy ðŸ˜Š"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- Horizontal Hover Cards -->
            <HorizontalScrollView
                android:id="@+id/horizontalActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <Button
                            android:id="@+id/btnShowSongs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show Songs"
                            android:backgroundTint="@color/purple_500"
                            android:textColor="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 1"
                            android:backgroundTint="@color/purple_500"
                            android:textColor="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 2"
                            android:backgroundTint="@color/purple_500"
                            android:textColor="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_add_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/round_comment_24"
            android:contentDescription="@string/add_comment"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btn_mood_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/round_access_time_24"
            android:contentDescription="@string/mood_history"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_east_24"
            android:contentDescription="@string/share_mood"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</RelativeLayout>